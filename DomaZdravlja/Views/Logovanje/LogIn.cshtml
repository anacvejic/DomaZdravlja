@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Resource> localizer

@model DomaZdravlja.Models.Korisnik


<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>LogIn</title>
    <style>
        .prva {
            margin: 0px auto;
            width: 70%;
            margin-left: 30%;
        }
    </style>
</head>
<body>
    @if (ViewBag.Admin != null)
    {
        <p class="text-center" style="font-weight:bold;font-family:cursive;color:red;font-size:large;">@ViewBag.Admin</p>
    }
    <div class="prva">
        <div class="col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading text-center">@localizer["UlogujteSe"]</div>
                <div class="panel-body">
                    @using (Html.BeginForm("RedirektujKorisnika", "Logovanje", FormMethod.Post, new { @class = "form" }))
                    {
                        @*@Html.AntiForgeryToken()*@
                        <div class="form-group">
                            @Html.LabelFor(m => m.Email, localizer["Email"])
                            @Html.TextBoxFor(m => m.Email, null, new { @class = "form-control", placeholder = @localizer["EmailPlaceHolder"]})
                            @Html.ValidationMessageFor(m => m.Email, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Password, @localizer["Password"])
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = @localizer["PasswordPlaceHolder"] })
                            @Html.ValidationMessageFor(m => m.Password, null, new { @class = "text-danger" })
                        </div>
                        <input type="submit" value=@localizer["DugmeLogovanje"] class="btn btn-primary" />
                    }
                </div>
            </div>
        </div>
    </div>
</body>
</html>
